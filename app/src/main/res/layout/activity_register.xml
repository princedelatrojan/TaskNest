<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@color/background_light_gray"
    tools:context=".Register"> <!-- Make sure this context matches your Register.java file's package -->

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:contentDescription="TaskNest Logo"
        android:src="@drawable/ic_tasknest_logo" />

    <!-- App Name Text -->
    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tasknest"
        android:textColor="@color/text_dark_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="8dp"/>

    <!-- "Create account" Title -->
    <TextView
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:textColor="@color/text_dark_gray"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="60dp"/>

    <!-- Full Name Input Field -->
    <EditText
        android:id="@+id/input_fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:fontFamily="@font/poppins"
        android:textColorHint="@color/text_light_gray"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:background="@drawable/input_field_background" />

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/input_userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        android:fontFamily="@font/poppins"
        android:textColorHint="@color/text_light_gray"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:background="@drawable/input_field_background" />

    <!-- Password Input Field (in a container for the 'eye' icon) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:autofillHints="newPassword"
            android:fontFamily="@font/poppins"
            android:textColorHint="@color/text_light_gray"
            android:padding="16dp"
            android:background="@drawable/input_field_background" />

        <!-- Password Visibility Toggle Icon -->
        <ImageView
            android:id="@+id/toggle_password_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/ic_visibility_off"
            android:contentDescription="Toggle password visibility"
            app:tint="@color/text_medium_gray" />

    </RelativeLayout>

    <!-- "Register" Button -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/button_primary_background"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="40dp"/>

    <!-- This "Spacer" View pushes the "Log in" link to the bottom -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- "Already have an account?" section at the bottom -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/text_medium_gray"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
        />

        <!-- "Log in" Button (styled as a text link) -->
        <Button
            android:id="@+id/button_login_link"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textColor="@color/primary_blue"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            />

    </LinearLayout>

</LinearLayout>
