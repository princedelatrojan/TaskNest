<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@color/background_light_gray"
    tools:context=".auth.MainActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_tasknest_logo"
        android:layout_marginTop="60dp"
        android:contentDescription="TaskNest Logo" />

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tasknest"
        android:textColor="@color/text_dark_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textColor="@color/text_dark_gray"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/input_userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        android:fontFamily="@font/poppins"
        android:textColorHint="@color/text_light_gray"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:background="@drawable/input_field_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:fontFamily="@font/poppins"
            android:textColorHint="@color/text_light_gray"
            android:padding="16dp"
            android:background="@drawable/input_field_background" />

        <ImageView
            android:id="@+id/toggle_password_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/ic_visibility_off"
            android:contentDescription="Toggle password visibility"
            app:tint="@color/text_medium_gray" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_forgot_password"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textColor="@color/text_dark_gray"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/button_primary_background"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="40dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/text_medium_gray"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/button_register"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/primary_blue"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

</LinearLayout>